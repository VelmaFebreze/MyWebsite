.linkedin-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px; /* Adjust as needed */
}

.image-wrapper {
  position: relative;
}

.linkedin,
.linkedin-mess {
  border: dotted;
  border-radius: 13%;
  border-color: #DDE6ED;
  transition: opacity 0.3s ease-in-out;
}

.linkedin-mess {
  position: absolute;
  top: 47%; /* Adjust this value slightly */
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  border-color: #40F8FF;
}

.linkedin-container:hover .linkedin {
  opacity: 0;
}

.linkedin-container:hover .linkedin-mess {
  opacity: 1;
}

.footer {
    background-color: #000000;
    border: dotted;
    border-color: #DDE6ED;
    border-bottom: none;
    border-left: none;
    border-right: none;
    padding: 2%;
  }

