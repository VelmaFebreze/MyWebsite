.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 20vh;
}
.item:not(:first-child) {
  opacity: 0;
  transition: opacity 0.5s, transform 0.5s;
}
.item__content {
  text-align: center;
  padding: 7rem;
  border-radius: 7px;
}
.item > p {
  text-align: center;
}
.left {
  transform-origin: left center;
  transform: translateX(-50%);
}
.right {
  transform-origin: right center;
  transform: translateX(50%);
}
.slide-in {
  opacity: 1 !important;
  transform: translateX(0);
}

.more {
font-size: 175%;
text-align: center;
}

.state-flags {
  display: flex;
  width: 10rem;
  height: 10rem;
  margin-left: 35%;
